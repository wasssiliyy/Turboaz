<UserControl x:Class="Turboaz.Domain.Views.UserControls.MainUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Turboaz.Domain.Views.UserControls"
             mc:Ignorable="d" 
             Height="400" Width="330" Background="WhiteSmoke" Margin="70,10,0,70">
    <Grid>
        <Canvas>
            
            <Image Width="330" Height="230" Source="{Binding ImageCommand}"/>
            <TextBlock Text="{Binding PriceCommand}" FontSize="20" Canvas.Bottom="120" Canvas.Left="40"/>
            <TextBlock Text="{Binding MarkaCommand}" FontSize="20" Canvas.Bottom="70" Canvas.Left="40"/>
            <TextBlock Text="{Binding EngineCommand}" FontSize="20" Canvas.Bottom="70" Canvas.Left="100"/>
            <Button Width="330" Background="Transparent"/>
        </Canvas>
    </Grid>
</UserControl>
